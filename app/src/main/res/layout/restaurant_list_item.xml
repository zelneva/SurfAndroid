<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/photo_restaurant"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/restaurant_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/name_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Restaurant name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/address_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="1 5th Avenue, New York, NY 10003"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right|bottom">

                    <TextView
                        android:id="@+id/rating_restaurant"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:text="4.4"
                        android:textSize="15sp"
                        android:textColor="#444" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star"
                        android:paddingTop="2dp"
                        android:layout_marginBottom="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>